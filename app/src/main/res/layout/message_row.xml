<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:elevation="8dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile"
                android:layout_margin="8dp"
                android:id="@+id/image_message_row"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="10dp"
                android:id="@+id/txt_name_message_row"
                android:layout_toEndOf="@+id/image_message_row"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/txt_message_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name_message_row"
                android:textSize="14dp"
                android:background="@color/colorAccent"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/image_message_row"
                android:text="@string/status_change" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:visibility="invisible"
                android:id="@+id/image_message_row_right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="10dp"
                android:id="@+id/txt_name_message_row_right"
                android:layout_toLeftOf="@+id/image_message_row_right"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/txt_message_row_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name_message_row_right"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/image_message_row_right"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:text="@string/status_change"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="invisible"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>